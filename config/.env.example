# Environment variables for IoT Sensor Client
# Copy this file to .env and customize for your environment

# Override client ID
# CLIENT_ID=pi_client_001

# MQTT broker settings
MQTT_HOST=192.168.1.112
MQTT_PORT=8883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_USE_TLS=true

# Sensor settings
SENSOR_PIN=4
SENSOR_TYPE=DHT11
UPDATE_INTERVAL=30

# Logging
LOG_LEVEL=INFO

# Development/testing
# MOCK_MODE=false